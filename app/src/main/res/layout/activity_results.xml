<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Results">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/check_search"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_margin="10dp"
            android:layout_alignParentTop="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp"
                android:layout_gravity="center_horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="40dp">

                    <net.steamcrafted.materialiconlib.MaterialIconView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:materialIcon="weather_sunny"
                        app:materialIconSize="50dp"
                        app:materialIconColor="@color/colorPrimary"
                        android:scaleType="center"
                        android:padding="2dp"
                        android:id="@+id/r_summer"
                        android:tooltipText="קיץ"/>
                    <net.steamcrafted.materialiconlib.MaterialIconView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:materialIcon="weather_pouring"
                        app:materialIconSize="50dp"
                        app:materialIconColor="@color/colorPrimary"
                        android:scaleType="center"
                        android:padding="2dp"
                        android:id="@+id/r_winter"
                        android:tooltipText="חורף"/>
                    <net.steamcrafted.materialiconlib.MaterialIconView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:materialIcon="leaf"
                        app:materialIconSize="50dp"
                        app:materialIconColor="@color/colorPrimary"
                        android:scaleType="center"
                        android:padding="2dp"
                        android:id="@+id/r_fall"
                        android:tooltipText="סתיו"/>

                    <net.steamcrafted.materialiconlib.MaterialIconView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:materialIcon="flower"
                        app:materialIconColor="@color/colorPrimary"
                        app:materialIconSize="50dp"
                        android:scaleType="center"
                        android:padding="2dp"
                        android:id="@+id/r_spring"
                        android:tooltipText="אביב"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal">

                    <net.steamcrafted.materialiconlib.MaterialIconView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:materialIcon="pool"
                        app:materialIconSize="50dp"
                        app:materialIconColor="@color/colorPrimary"
                        android:scaleType="center"
                        android:padding="2dp"
                        android:id="@+id/r_water"
                        android:tooltipText="כניסה למים"/>
                    <net.steamcrafted.materialiconlib.MaterialIconView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:materialIcon="wheelchair_accessibility"
                        app:materialIconSize="50dp"
                        app:materialIconColor="@color/colorPrimary"
                        android:scaleType="center"
                        android:padding="2dp"
                        android:id="@+id/r_accessible"
                        android:tooltipText="נגיש"/>
                    <net.steamcrafted.materialiconlib.MaterialIconView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:materialIcon="human_male_female"
                        app:materialIconSize="50dp"
                        app:materialIconColor="@color/colorPrimary"
                        android:scaleType="center"
                        android:padding="2dp"
                        android:id="@+id/r_families"
                        android:tooltipText="מתאים למשפחות"/>

                    <net.steamcrafted.materialiconlib.MaterialIconView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:materialIcon="heart"
                        app:materialIconColor="@color/colorPrimary"
                        app:materialIconSize="50dp"
                        android:scaleType="center"
                        android:padding="2dp"
                        android:id="@+id/r_heart"
                        android:tooltipText="רומנטי"/>
                    <net.steamcrafted.materialiconlib.MaterialIconView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:materialIcon="walk"
                        app:materialIconSize="50dp"
                        app:materialIconColor="@color/colorPrimary"
                        android:scaleType="center"
                        android:padding="2dp"
                        android:id="@+id/r_walk"
                        android:tooltipText="למטיבי לכת"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal">
                    <net.steamcrafted.materialiconlib.MaterialIconView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:materialIcon="sync"
                        app:materialIconSize="50dp"
                        app:materialIconColor="@color/colorPrimary"
                        android:scaleType="center"
                        android:padding="2dp"
                        android:id="@+id/r_circle"
                        android:tooltipText="מעגלי"/>
                    <net.steamcrafted.materialiconlib.MaterialIconView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:materialIcon="bike"
                        app:materialIconSize="50dp"
                        android:scaleType="center"
                        app:materialIconColor="@color/colorPrimary"
                        android:padding="2dp"
                        android:id="@+id/r_bicycle"
                        android:tooltipText="מתאים לאופניים"/>
                    <net.steamcrafted.materialiconlib.MaterialIconView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:materialIcon="city"
                        app:materialIconSize="50dp"
                        android:scaleType="center"
                        app:materialIconColor="@color/colorPrimary"
                        android:padding="2dp"
                        android:id="@+id/r_city"
                        android:tooltipText="טיול עירוני"/>
                    <net.steamcrafted.materialiconlib.MaterialIconView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:materialIcon="nature"
                        app:materialIconSize="50dp"
                        app:materialIconColor="@color/colorPrimary"
                        android:scaleType="center"
                        android:padding="2dp"
                        android:id="@+id/r_nature"
                        android:tooltipText="טבע"/>
                    <net.steamcrafted.materialiconlib.MaterialIconView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:materialIcon="flower"
                        app:materialIconSize="50dp"
                        android:scaleType="center"
                        app:materialIconColor="@color/colorPrimary"
                        android:padding="2dp"
                        android:id="@+id/r_flower"
                        android:tooltipText="פריחה"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal">
                    <net.steamcrafted.materialiconlib.MaterialIconView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:materialIcon="cat"
                        app:materialIconSize="50dp"
                        app:materialIconColor="@color/colorPrimary"
                        android:scaleType="center"
                        android:padding="2dp"
                        android:id="@+id/r_dogs"
                        android:tooltipText="לחיות מחמד"/>
                    <net.steamcrafted.materialiconlib.MaterialIconView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:materialIcon="briefcase"
                        app:materialIconSize="50dp"
                        android:scaleType="center"
                        app:materialIconColor="@color/colorPrimary"
                        android:padding="2dp"
                        android:id="@+id/r_bigbag"
                        android:tooltipText="ציוד על הגב"/>
                    <net.steamcrafted.materialiconlib.MaterialIconView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:materialIcon="bus"
                        app:materialIconSize="50dp"
                        app:materialIconColor="@color/colorPrimary"
                        android:scaleType="center"
                        android:padding="2dp"
                        android:id="@+id/r_public_transport"
                        android:tooltipText="נגיש בתחבורה ציבורית"/>
                </LinearLayout>
            </LinearLayout>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="יאללה"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="@color/colorAccent"
                android:id="@+id/btn_search_do"/>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:id="@+id/recycler"
            android:scrollbars="vertical"
            android:layout_below="@id/check_search"
            android:layout_above="@id/btm_menu"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/btm_menu"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true">
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/result_now"
                android:text="לעכשיו"
                android:backgroundTint="@color/colorPrimary"/>
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/result_search"
                android:text="משהו ספציפי"
                android:backgroundTint="@color/colorPrimary"/>
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/result_all"
                android:text="לא בררן"
                android:backgroundTint="@color/colorPrimary"/>
        </LinearLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>